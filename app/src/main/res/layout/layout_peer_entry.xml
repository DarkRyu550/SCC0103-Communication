<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/peerAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/peerDisplayName"
            app:layout_constraintStart_toEndOf="@+id/peerAvatar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/peerAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/peerAvatar" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
